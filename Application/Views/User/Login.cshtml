@{
    ViewData["Title"] = "Login";
}

@model Entities.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h3>Login</h3>
                </div>
                <div class="card-body bg-light p-4">
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="Email" class="form-label text-dark">Email</label>
                            <input type="email" class="form-control bg-white text-dark" id="Email" name="email" placeholder="Enter your email" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Password" class="form-label text-dark">Password</label>
                            <input type="password" class="form-control bg-white text-dark" id="Password" name="password" placeholder="Enter your password" required />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg">Login</button>
                            <a asp-action="SignUp" class="btn btn-outline-dark btn-lg">Register</a>
                        </div>
                    </form>

                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add custom CSS for additional styling -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .btn-dark {
        background-color: #000;
        border: none;
    }

        .btn-dark:hover {
            background-color: #333;
        }

    .btn-outline-dark {
        border-color: #000;
        color: #000;
    }

        .btn-outline-dark:hover {
            background-color: #000;
            color: #fff;
        }

    .form-control {
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #000;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }
</style>