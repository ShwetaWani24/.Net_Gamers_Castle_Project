@model Entities.Product

<h2 class="purchase-title">Confirm Purchase</h2>

<div class="purchase-container">
    <h3>@Model.ProductName</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Quantity:</strong> @ViewBag.Quantity</p>
    <p><strong>Total Price:</strong> $@ViewBag.TotalPrice</p>

    <form method="post" action="@Url.Action("BuyNowConfirm", "Product", new { productId = Model.ProductId, quantity = ViewBag.Quantity })">
        <button type="submit" class="btn btn-dark">Confirm Purchase</button>
        <a href="@Url.Action("ViewCart", "Cart")" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background */
        color: #212529;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full viewport height */
    }

    .purchase-title {
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .purchase-container {
        width: 400px; /* Adjust width as needed */
        padding: 20px;
        background-color: white;
        border: 1px solid #ddd; /* Box border */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        text-align: center;
    }

    h3 {
        margin-top: 0;
    }

    p {
        font-size: 16px;
        margin: 10px 0;
    }

    .btn {
        margin: 10px 5px;
        font-weight: bold;
        border-radius: 5px;
    }

    .btn-dark {
        background-color: black;
        color: white;
        border: none;
    }

        .btn-dark:hover {
            background-color: #343a40;
        }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
</style>